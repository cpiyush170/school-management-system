<div class="container mt-3">
  <h3 class="text-center"><%= subject.name+" " %>Teachers</h3>
  <% if(teachers.length > 0) { %>
  <div class="container">
    <div
      class="container d-flex justify-content-between align-items-center bg-main p-3"
    >
      <div>
        <h3 class="text-light display-5">
          <i class="bi bi-people-fill me-3"></i>Teachers
        </h3>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr class="fs-4">
            <th scope="col">FullName</th>
            <th scope="col">Email</th>
            <th scope="col">Age</th>
            <th scope="col">Gender</th>
            <th scope="col">Salary</th>
            <th scope="col">Joined At</th>
          </tr>
        </thead>
        <tbody class="table-group-divider options">
          <% teachers.forEach(function(teacher) { %>
          <tr class="fs-5">
            <td><%= teacher.firstName + " "+ teacher.lastName %></td>
            <td><%= teacher.email %></td>
            <td><%= teacher.age %></td>
            <td><%= teacher.gender %></td>
            <td><%= teacher.salary %></td>
            <td><%= teacher.joined_at.toISOString().slice(0, 10) %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% } else { %>
  <p class="display-5 text-center mt-3">
    <%= subject.name %> subject has no teachers
  </p>
  <% } %>
</div>
