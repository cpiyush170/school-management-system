<h3 class="text-center mt-5">Edit Subject Details</h3>

<div class="container mt-3">
  <form action="/subjects/<%= subject.id %>?_method=PUT" method="post">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        name="name"
        id="name"
        value="<%"
        ="subject.name"
        %
      />
      placeholder="Subject Name..." required>
      <label for="name">Subject Name</label>
    </div>
    <div class="form-floating mb-3">
      <button type="submit" class="form-control btn btn-dark p-0">
        UPDATE
      </button>
    </div>
  </form>
</div>
