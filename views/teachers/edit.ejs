<h3 class="text-center mt-5">Edit Teacher Details</h3>

<div class="container mt-3">
<form action="/teachers/<%= teacher.id %>?_method=PUT" method="POST">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" name="firstName" id="firstName" value="<%= teacher.firstName %>" placeholder="FirstName..." required>
    <label for="firstName">FirstName</label>
  </div>
  <div class="form-floating mb-3">
    <input type="text" class="form-control" name="lastName" id="lastName" value="<%= teacher.lastName %>" placeholder="LastName..." required>
    <label for="lastName">LastName</label>
  </div>
  <div class="form-floating mb-3">
    <input type="email" class="form-control" name="email" id="email" value="<%=teacher.email %>" placeholder="Email" required>
    <label for="email">Email</label>
  </div>
  <div class="form-floating mb-3">
    <input type="Number" class="form-control" name="age" id="age" value="<%=teacher.age %>" placeholder="Age" required>
    <label for="age">Age</label>
  </div>
  <div class="form-floating mb-3">
    <input type="text" class="form-control" name="gender" id="gender" value="<%=teacher.gender %>" placeholder="Gender" required>
    <label for="gender">Gender</label>
  </div>
  <div class="form-floating mb-3">
    <input type="number" class="form-control" name="salary" id="salary" value="<%= teacher.salary %>" placeholder="Salary" required>
    <label for="salary">Salary</label>
  </div>
  <div class="form-floating mb-3">
    <select name="subject" id="floatingSelect" class="form-select">
      <% subjects.forEach(function(el){ %>
            <option label="<%= el.name %>" value="<%=el.id%>">
            <% }) %> 
      </select>
      <label for="floatingSelect">Subject</label>
  </div>
  <div class="form-floating mb-3">
    <button type="submit" class="form-control btn btn-dark p-0">UPDATE</button>
  </div>
</form>
</div>
